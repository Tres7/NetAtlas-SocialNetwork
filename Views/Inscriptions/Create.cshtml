@model Projet.Models.Inscription

@{
    ViewData["Title"] = "Je m'inscris";
}

<h1 class="nav-link text-white">Inscription</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" align="center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                  </br><input asp-for="Nom" class="form-control" placeholder="Nom" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                 </br><input asp-for="Email" class="form-control"placeholder="Entrez votre adresse mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                 </br><input asp-for="mobile" class="form-control" placeholder="Mobile" />
                <span asp-validation-for="mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                 </br><input asp-for="ville" class="form-control" placeholder="Ville"/>
                <span asp-validation-for="ville" class="text-danger"></span>
            </div>
            <div class="form-group">
                 </br><input asp-for="age" class="form-control" placeholder="Age"/>
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
            <div class="form-group">
                 </br><input asp-for="anniv" class="form-control" placeholder="Date de naissance"/>
                <span asp-validation-for="anniv" class="text-danger"></span>
            </div>
            <div class="form-group">
                 </br><input asp-for="nomUt" class="form-control" placeholder="Nom d'utilisateur"/>
                <span asp-validation-for="nomUt" class="text-danger"></span>
            </div>
            <div class="form-group">
                 </br><input asp-for="password" class="form-control" placeholder="Mot de passe"/>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                 </br><input type="submit" value="Je m'inscris" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
